<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SpecCheck - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/global.css">
</head>

<body>
    <main>
        <header id="menu-header">
            <button id="menuBtn" class="btn bi bi-list" type="button" data-bs-toggle="offcanvas" data-bs-target="#menu"
                aria-controls="offcanvasExample">
            </button>
            <h1>Home</h1>
        </header>

        <aside>
            <%- include('partials/side-menu') %>
        </aside>

        <br><br>
        <h3 style="text-align: center;">Welcome back <%= username %>
        </h3>
        <br><br>
        <% cars.forEach((car)=> { %>
            <%- include('partials/car-card', {car: car}) %>
                <br>
        <% }); %>
        <%- include('partials/bottom-navbar') %>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>