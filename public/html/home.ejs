<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SpecCheck - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/global.css">
    </head>

<body>
    <main>
        <header id="menu-header">
            <button id="menuBtn" class="btn bi bi-list" type="button" data-bs-toggle="offcanvas" data-bs-target="#menu"
                aria-controls="offcanvasExample">
            </button>
            <h1>Home</h1>
        </header>

        <aside>
            <%- include('partials/side-menu') %>
        </aside>

        <div class="container py-4">
            <h3 class="text-center mb-4">Welcome back <%= username %></h3>
            
            <% if (cars && cars.length > 0) { %>
                <% cars.forEach((car)=> { %>
                    <%- include('partials/car-card', {car: car}) %>
                <% }); %>
            <% } else { %>
                <div class="text-center p-5 bg-light rounded-3">
                    <i class="bi bi-car-front-fill display-5 text-muted mb-3"></i>
                    <p class="text-muted">You have no cars to display. Add one now!</p>
                    <a href="/search" class="btn btn-primary">
                        <i class="bi bi-plus me-2"></i> Add Car
                    </a>
                </div>
            <% } %>
            
        </div> <%- include('partials/bottom-navbar') %>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>