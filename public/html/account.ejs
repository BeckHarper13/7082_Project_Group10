<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SpecCheck - Account</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="../css/global.css" rel="stylesheet">
    <link href="../css/account.css" rel="stylesheet">
</head>

<body>
    <main>
        <header id="menu-header">
            <%- include('partials/side-menu') %><h1 id="headerTitle">Account</h1>
        </header>

        <div class="text-center mb-3">
            <div class="user-icon mb-3">
                <i class="bi bi-person-circle display-4"></i>
            </div>
            <div>
                <h1 id="username" class="h3 mb-2"><%= username %></h1>
                <h2 id="email_address" class="h5 text-muted"><%= email_address %></h2>
            </div>
        </div>

        <!-- Buttons -->
        <section class="edit-account-buttons text-center mb-5">
            <button class="btn btn-outline-primary me-2" id="emailBtn">
                <i class="bi bi-envelope me-2"></i>Change Email
            </button>
            <button class="btn btn-outline-primary" id="passBtn">
                <i class="bi bi-lock me-2"></i>Change Password
            </button>
        </section>

        <!-- Your Cars Section -->
        <section class="your-cars">
            <h2 class="mb-3 text-center">Your Cars</h2>

            <% if (cars && cars.length > 0) { %>
                <div class="row">
                    <% cars.forEach(car => { %>
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm">
                                <div class="card-body text-center">
                                    <h5 class="card-title"><%= car.make %> <%= car.model %></h5>
                                    <% if (car.year) { %>
                                        <p class="card-text text-muted mb-1"><%= car.year %></p>
                                    <% } %>
                                    <% if (car.color) { %>
                                        <p class="card-text"><i class="bi bi-palette me-1"></i><%= car.color %></p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="text-center text-muted">You haven't added any cars yet.</p>
            <% } %>
        </section>
    </main>

    <!-- Change Email Modal -->
    <div class="modal fade" id="emailModal" tabindex="-1" aria-labelledby="emailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="emailModalLabel">
                        <strong>Change Email</strong>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="newEmail" class="form-label">New Email</label>
                        <input type="email" class="form-control" id="newEmail" placeholder="Enter new email">
                    </div>
                    <div class="mb-3">
                        <label for="confirmEmail" class="form-label">Confirm New Email</label>
                        <input type="email" class="form-control" id="confirmEmail" placeholder="Confirm new email">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="saveEmailBtn">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Change Password Modal -->
    <div class="modal fade" id="passModal" tabindex="-1" aria-labelledby="passModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="passModalLabel">
                        <strong>Change Password</strong>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">New Password</label>
                        <input type="password" class="form-control" id="newPassword" placeholder="Enter new password">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm New Password</label>
                        <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm new password">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="savePasswordBtn">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../js/account.js"></script>
</body>

</html>
