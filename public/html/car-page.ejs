<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SpecCheck - {{ car_name }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="../css/global.css" rel="stylesheet">
    <link href="../css/car-page.css" rel="stylesheet">
</head>

<body>
    <main>
        <header>
            <%- include('partials/side-menu') %>
        </header>

        <!-- Content -->
        <div class="p-3 pb-5">
            <!-- Car Name -->
            <h2 class="text-center mt-3 mb-1">{{ car_name }}</h2>
            <p class="text-center text-muted mb-3">{{ license_plate }}</p>

            <!-- Car Image -->
            <div class="car-image-container">
                <img src="{{ car_image_url }}" alt="{{ car_name }}" class="car-image">
            </div>
            <div class="vin-label">{{ vin }}</div>

            <!-- Make/Model -->
            <div class="mt-4 mb-2">
                <h5 class="mb-1">{{ make }} {{ model }}</h5>
                <p class="text-muted mb-0">{{ manufacture_year }}</p>
            </div>

            <hr>

            <!-- Fuel Section -->
            <div class="d-flex gap-3 mb-4">
                <div class="section-icon">
                    <i class="bi bi-info" style="font-size: 1.5rem;"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="section-title">Fuel</div>
                    <div class="detail-text">Fill: {{ fuel_fill }}%</div>
                    <div class="detail-text">Type: {{ fuel_type }}</div>
                    <div class="detail-text">km/L: {{ fuel_efficiency }}</div>
                </div>
            </div>

            <!-- Tires Section -->
            <div class="d-flex gap-3 mb-4">
                <div class="section-icon">
                    <i class="bi bi-info" style="font-size: 1.5rem;"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="section-title">Tires</div>
                    <div class="detail-text">Front Left Pressure: {{ tire_fl_pressure }} PSI</div>
                    <div class="detail-text">Front Right Pressure: {{ tire_fr_pressure }} PSI</div>
                    <div class="detail-text">Rear Left Pressure: {{ tire_rl_pressure }} PSI</div>
                    <div class="detail-text">Rear Right Pressure: {{ tire_rr_pressure }} PSI</div>
                    <div class="detail-text">Tread Depth: {{ tire_tread_depth }} MM</div>
                </div>
            </div>

            <!-- Engine & Fluids Section -->
            <div class="d-flex gap-3 mb-4">
                <div class="section-icon">
                    <i class="bi bi-info" style="font-size: 1.5rem;"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="section-title">Engine & Fluids</div>
                    <div class="detail-text">Oil Life: {{ oil_life }}%</div>
                    <div class="detail-text">Coolant Temp: {{ coolant_temp }}Â°C</div>
                    <div class="detail-text">Transmission Fluid: {{ transmission_fluid }}</div>
                    <div class="detail-text">Battery Voltage: {{ battery_voltage }} V</div>
                </div>
            </div>

            <!-- Performance / Driving Stats Section -->
            <div class="d-flex gap-3 mb-4">
                <div class="section-icon">
                    <i class="bi bi-info" style="font-size: 1.5rem;"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="section-title">Performance / Driving Stats</div>
                    <div class="detail-text">Odometer: {{ odometer }} km</div>
                    <div class="detail-text">Trip Distance: {{ trip_distance }} km</div>
                    <div class="detail-text">Average Speed: {{ avg_speed }} km/h</div>
                    <div class="detail-text">Top Speed (Trip): {{ top_speed }} km/h</div>
                </div>
            </div>

            <hr>

            <!-- Notes Section -->
            <div class="d-flex gap-3 mb-5">
                <div class="section-icon">
                    <i class="bi bi-pencil-square" style="font-size: 1.5rem;"></i>
                </div>
                <div class="flex-grow-1">
                    <div class="section-title">Notes</div>
                    <div class="detail-text" id="notesDisplay">{{ notes }}</div>
                </div>
            </div>

            <!-- Ask AI Button -->
            <button class="ask-ai-btn" id="askAiBtn">
                <div class="ask-ai-text">Ask<br>AI</div>
            </button>
        </div>

        <!-- Bottom Navigation -->
        <footer>
            <button class="nav-btn" id="backBtn">Back</button>
            <button class="nav-btn" id="deleteBtn">Delete</button>
            <button class="nav-btn" id="editBtn">Edit</button>
        </footer>
    </main>

    <!-- Edit Notes Modal -->
    <div class="modal fade" id="editNotesModal" tabindex="-1" aria-labelledby="editNotesModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editNotesModalLabel">
                        <strong>{{ car_name }}</strong><br>
                        <small class="text-muted">{{ license_plate }}</small>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6 class="mb-3">Edit Note</h6>
                    <textarea class="form-control" id="notesTextarea" rows="8"
                        placeholder="Enter your notes here...">{{ notes }}</textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Discard Changes</button>
                    <button type="button" class="btn btn-primary" id="saveNoteBtn">Save Note</button>
                </div>
            </div>
        </div>
    </div>

    <!-- AI Chat Modal -->
    <div class="modal fade" id="aichatModal" tabindex="-1" aria-labelledby="aichatModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content" style="border-radius: 15px;">
                <div class="modal-header bg-info text-white"
                    style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
                    <h5 class="modal-title fw-bold" id="aichatModalLabel">AI Chat</h5>
                    <button type="button" id="aiButton" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <div class="modal-body" id="chatBody" style="min-height: 300px; max-height: 400px; overflow-y: auto;">
                    <!-- Chat messages will appear here -->
                    <div class="d-flex flex-row justify-content-start mb-4">
                        <img src="../img/speccheck-tiny.png" alt="SpecCheck AI" style="width: 45px; height: 45px;">
                        <div class="p-3 ms-3" style="border-radius: 15px; background-color: rgba(57, 192, 237, 0.2);">
                            <p class="small mb-0">I am a SpecCheck AI Agent. How can I help?</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="input-group">
                        <textarea class="form-control" id="chatTextarea" rows="2"
                            placeholder="Type your message..."></textarea>
                        <button class="btn btn-primary" type="button" id="sendChatBtn">
                            <i class="bi bi-send"></i> Send
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../js/car-page.js"></script>
</body>

</html>