<a href="/car?trimId=<%= encodeURIComponent(car.trimId) %>&carId=<%= encodeURIComponent(car.id) %>" class="text-decoration-none text-dark">
    <div class="card shadow mb-4 border-0 rounded-3" style="background-color: rgb(246, 248, 251);">
        <div class="card-body pb-2">
            
            <div class="border-start border-primary border-5 ps-3 py-1 mb-2">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 fw-bold">
                        <%= car.make %> <%= car.model %>
                    </h5>
                    <i class="bi bi-chevron-right text-primary fs-5"></i>
                </div>
                
                <% if (car.year) { %>
                    <p class="text-muted small mb-0 mt-1"><%= car.year %></p>
                <% } %>
            </div>
            
            <div class="row row-cols-2 g-3 info-grid pt-3"> 
                
                <div class="col d-flex align-items-center">
                    <i class="bi bi-fuel-pump-fill fs-4 me-2"></i> 
                    <div>
                        <small class="text-muted d-block">Fuel</small>
                        <span class="fw-bold" id="fuel"><%= car.fuelFill %>%</span>
                    </div>
                </div>

                <div class="col d-flex align-items-center">
                    <i class="bi bi-tools fs-4 me-2"></i> 
                    <div>
                        <small class="text-muted d-block">Oil Life</small>
                        <span class="fw-bold" id="oilLevel"><%= car.oilLevel %>%</span>
                    </div>
                </div>

                <div class="col d-flex align-items-center">
                    <i class="bi bi-speedometer2 fs-4 me-2"></i> 
                    <div>
                        <small class="text-muted d-block">Tires</small>
                        <span class="fw-bold" id="tirePressure"><%= car.tirePressure %> PSI</span>
                    </div>
                </div>
                
                <div class="col d-flex align-items-center">
                    <i class="bi bi-battery-half fs-4 me-2"></i> 
                    <div>
                        <small class="text-muted d-block">Battery</small>
                        <span class="fw-bold" id="battery"><%= car.batteryVoltage %> V</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="mockCarInteraction">
            <button class="start-car-btn">
                <div class="start-car-text">Start<br>Car</div>
            </button>
            <div class="mb-3 w-75 mx-auto temp-slider">
            </div>
        </div>
        <% if (car.notes) { %>
        <ul class="list-group list-group-flush border-top">
            <li class="list-group-item bg-light border-0 py-2">
                <i class="bi bi-pencil-square me-2 text-secondary"></i>
                <small class="text-muted">Note: </small>
                <small id="note"><%= car.notes %></small>
            </li>
        </ul>
        <% } %>
    </div>
</a>
<script src="/js/car-card.js"></script>
<style>
    .vehicle-cards-holder {
        display: flex;
        flex-wrap: wrap;
        justify-content: center; /* Centers all cards */
        gap: 20px; /* Even spacing between cards */
        margin: 10px 0;
        width: 90%
    }

    .vehicle-card {
        width: 20rem;
    }

    /* Default (OFF) state */
    .car-start-switch .car-start-input {
      /* background-color: #dc3545; red */
      /* border-color: #dc3545; */
      color: red;
    }

    .start-car-btn {
        position: sticky;
        clear: both;
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: white;
        /* border: 2px solid #dee2e6; */
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        z-index: 201;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 5px;
    }

    .car-started {
        background-color: rgb(80, 154, 80);
    }
    
    .start-car-text {
        font-size: 0.7rem;
        font-weight: 600;
        text-align: center;
        line-height: 1.1;
    }
</style>